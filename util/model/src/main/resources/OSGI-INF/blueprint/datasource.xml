<blueprint xmlns="http://www.osgi.org/xmlns/blueprint/v1.0.0"
           xmlns:cm="http://aries.apache.org/blueprint/xmlns/blueprint-cm/v1.1.0"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="
           http://aries.apache.org/blueprint/xmlns/blueprint-cm/v1.1.0 http://aries.apache.org/schemas/blueprint-cm/blueprint-cm-1.1.0.xsd
           ">
    <cm:property-placeholder persistent-id="hu.tilos.radio" update-strategy="reload">
        <cm:default-properties>
            <cm:property name="environment" value="local"/>
            <cm:property name="jdbc.password" value=""/>
        </cm:default-properties>
    </cm:property-placeholder>

    <bean id="tilosDatasource" class="com.mysql.jdbc.jdbc2.optional.MysqlDataSource">
        <property name="URL" value="${jdbc.url}"/>
        <property name="user" value="${jdbc.user}"/>
        <property name="password" value="${jdbc.password}"/>
    </bean>

    <service id="tilosDatasourceService" interface="javax.sql.DataSource" ref="tilosDatasource">
        <service-properties>
            <entry key="name" value="tilos"></entry>
            <entry key="osgi.jndi.service.name" value="jdbc/tilos"/>
            <entry key="datasource.name" value="tilos"/>
        </service-properties>
    </service>

</blueprint>
